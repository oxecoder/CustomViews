<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/button_horizontal_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horizontal Dot Activity"
            app:layout_constraintBottom_toTopOf="@id/button_drag_add_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <Button
            android:id="@+id/button_drag_add_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drag Add Activity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_horizontal_dot" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
